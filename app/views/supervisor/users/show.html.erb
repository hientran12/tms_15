<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <div id="user-info">
      <ul class ="list-group">
        <li class="list-group-item list-group-item-info">Email : <%= @user.email%></li>
        <li class="list-group-item list-group-item-info">Address : <%= @user.address %></li>
        <li class="list-group-item list-group-item-info">Date Of Join : <%= @user.date_of_join %></li></br>
        <%= link_to "Edit", edit_supervisor_user_path(@user), class: "btn btn-success", remote: true %>
      </ul>
    </div>
  </div>

  <div class="col-md-12">
    <ul class="list-group">
      <% @activities.each do |activity| %>
      <li class="list-group-item list-group-item-info">
      <%= activity.name %> about <%= time_ago_in_words(activity.created_at) %> ago.
      </br>
      </li>
      <% end %>
    </ul>
  </div>

</div>