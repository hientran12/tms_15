<% provide(:title, @course.name) %>
<div id="course-status">
  <% if @course.users.count > 0 %>
    <% if @course.training_progresses.first.status.nil? %>
      <%= link_to 'Start course', new_training_progress_path(course_id: @course.id), 
        remote: true, class: "btn btn-primary" %>
    <% elsif @course.training_progresses.first.status %>
      <%= link_to 'Finish course', training_progress_path(@course, course_id: @course.id), 
        method: :patch, data: {confirm: "Are you sure?"},
        remote: true, class: "btn btn-warning" %>          
    <% else %>
      <h1><%= "Course finished" %></h1>
      <%= link_to 'Restart course', new_training_progress_path(course_id: @course.id), 
        remote: true, class: "btn btn-primary" %>
    <% end %>
  <% else %>
  <div class="col-md-12" style="background-color: yellow">
    <h3>This course has no trainee, add trainees to start course</h3>
  </div>
  <% end %>

<div class = "row">
<div class="col-md-4">
  <div id="content">
    <h3> <%= @course.name %> </h3>
    <ul class="list-group">
    <li class="list-group-item list-group-item-info">
    <p>
      <%= h @course.description %>
    </p>
    </li>
    </ul>
  </div>
</div>

<div class="form-horizontal">
  <div class="col-md-4">
    <h3> List subjects </h3>
    <ul class="list-group">
    <% @subjects.each do |subject| %>
      <li class="list-group-item list-group-item-info">
      <p> <%= link_to subject.name, supervisor_course_subject_path(@course, subject) %> </p>
      </li>
    <% end %>
  </ul>
  </div>
</div>

<div class="form-horizontal">
  <div class="col-md-4">
    <h3> List Users </h3>
    <ul class="list-group">
      <% @users.each do |user| %>
      <li class="list-group-item list-group-item-info">
        <p>
          <%= link_to user.name, user_path(user) %>
       </p>
     </li>
    <% end %>
    </ul>
  </div>
</div>
</div>
<div class ="col-md-4">
  <%= link_to 'Edit course', edit_supervisor_course_path(@course),class: "btn btn-primary", remote: true %>
</div>
<div class ="col-md-4">
  <%= link_to 'Add subjects', course_course_subject_relationships_path(@course),class: "btn btn-primary" %>
</div>
<div class ="col-md-4">
  <%= link_to 'Add trainees', course_training_progresses_path(@course),target: "_blank", class: "btn btn-primary" %>
</div>
</div>
